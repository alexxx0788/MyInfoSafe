@model ShepherdCoAPI.Model.User
<div class="modal-body">
    <fieldset>
        <legend>Update balance @Model.Login</legend>
        <p>
            Balance:<input id="userBalance" value="@Model.Balance"/>
        </p>
    </fieldset>
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <button type="submit" id="approve-btn" class="btn btn-danger">Update</button>
</div>

<script type="text/javascript">
    $(function() {
        $('#approve-btn').click(function() {
            var val = $('#userBalance').val();
            if (isNaN(val)) {
                alert('Balance must be a number');
            } else {
                UpdateBalance($('#modal-container').modal('hide'), '@Model.Login', val, @Model.UserId);
            }
        });
        });
</script>



